package montyHallParadox;

import java.util.Scanner;

public class Game {

	Scanner scanner = new Scanner(System.in);

	private int doors;
	private int car;
	private int pick = (int) (Math.random() * this.doors + 1);

	public Game() {
		this.doors = 3;
		this.setCar(0);
	}

	/**
	 * @return the car
	 */
	public int getCar() {
		return this.car;
	}

	/**
	 * @param car
	 *            the car to set
	 */
	public void setCar(int car) {
		this.car = car;
	}

	public void placeCar() {
		this.setCar((int) (Math.random() * this.doors + 1));

	}

	public int firstPick() {

		int goat_door = (int) (Math.random() * this.doors + 1);

		while (this.pick == this.getCar() && this.pick == goat_door && goat_door == this.getCar()) {
			goat_door = (int) (Math.random() * this.doors + 1);

			if (this.pick == this.car && goat_door == this.pick) {
				goat_door = (int) (Math.random() * this.doors + 1);
			}

		}

		return goat_door;
	}

}
