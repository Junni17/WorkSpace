package exercises;

import java.util.Scanner;

public class P5_3 {

	public static void main(String[] args) {
		
		Scanner scanner = new Scanner(System.in);
		
		System.out.println("Line of input: ");
		String s1 = scanner.nextLine();
		String s2 = "";
		String s3 = "";
		String s4 = s1;
		int vowels = 0;
		String vowel_position = "There were vowels at the following positions: ";
		
		for (int i = 0; i < s4.length(); i++){
		
			char ch = s4.charAt(i);
			
			if (ch == 'a' || ch == 'e' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u'){
				s4 = s4.replace(s4.charAt(i), '_');
				vowels++;
				vowel_position += Integer.toString(i) + " ";
			}	
		}
		
		System.out.println("The number of vowels in the string: " + vowels);
		System.out.println(s4);
		
		for (int i = 0; i < s1.length(); i = i+2){
			
			char ch = s1.charAt(i);
			
			s3 += ch;
			
		}
		
		System.out.println(s3);
		
		for (int i = 0; i < s1.length(); i++){
		
			char ch = s1.charAt(i);
			
			if (Character.isUpperCase(ch) == true){
				s2 += s1.charAt(i);
			}

		}
		
		System.out.println(s2);
		scanner.close();
		
		}
		
		

	}


