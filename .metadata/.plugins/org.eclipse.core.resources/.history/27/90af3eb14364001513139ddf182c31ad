package montyHallParadox;

import java.util.Scanner;

public class Game {

	Scanner scanner = new Scanner(System.in);

	private int doors;
	private int car;

	public Game() {
		this.doors = 3;
		this.car = 0;
	}

	public void placeCar() {
		this.car = (int) (Math.random() * this.doors + 1);

	}

	public void firstPick() {
		int door_pick = (int) (Math.random() * this.doors + 1);
		int goat_door = (int) (Math.random() * this.doors + 1);

		while (door_pick == this.car && door_pick == goat_door && goat_door == this.car) {
			goat_door = (int) (Math.random() * this.doors + 1);
		}

	}

}
