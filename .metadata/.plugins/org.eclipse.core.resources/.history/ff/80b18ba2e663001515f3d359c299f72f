package montyHallParadox;

public class GameApp {

	public static void main(String[] args) {

		int doors = 3;
		int car_door = (int) (Math.random() * doors + 1);
		// int door_pick = (int) (Math.random() * this.doors + 1);
		int goat_door1 = (int) (Math.random() * doors + 1);
		int goat_door2 = (int) (Math.random() * doors + 1);

		while (car_door == goat_door1 || car_door == goat_door2 || goat_door2 == goat_door1) {

			if (car_door == goat_door1) {
				goat_door1 = (int) (Math.random() * doors + 1);
			} else if (car_door == goat_door2 || goat_door1 == goat_door2) {
				goat_door2 = (int) (Math.random() * doors + 1);
			}
		}

		System.out.println("Car door: " + car_door);
		System.out.println("Goat door 1: " + goat_door1)
		System.out.println("Goat door 2: " + goat_door2);
	}

}
