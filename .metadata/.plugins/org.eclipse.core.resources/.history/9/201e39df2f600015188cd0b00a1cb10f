package pig;

public class PigPlayer 
{
	private Die die1;
	private int point;
	private int sum;
	private boolean win;
	private boolean lose;
	
	public PigPlayer()
	{
		die1 = new Die();
		point = 0;
		sum = 0;
		win = false;
		lose = false;
	}
	
	
	public int getPoint()
	{
		return point;
	}
	
	public void setPoint(int x)
	{
		point = x;
	}
	
	public int getSum()
	{
		return sum;
	}
	
	public boolean hasWon(boolean x)
	{
		return win = x;
	}
	
	public boolean hasLost(boolean x)
	{
		return lose = x;
	}
	
	public boolean getWin()
	{
		return win;
	}
	
	public boolean getLose()
	{
		return lose;
	}
	
	public void throwDie()
	{
		die1.roll();
		point += die1.getfaceValue();
	}

}
