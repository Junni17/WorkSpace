package pig;

public class PigPlayer 
{
	private Die die1;
	private int point;
	private int sum;
	private boolean win;
	private boolean lose;
	private boolean play;
	
	public PigPlayer()
	{
		die1 = new Die();
		point = 0;
		sum = 0;
		win = false;
		lose = false;
		play = true;
	}
	
	
	public int getPoint()
	{
		return point;
	}
	
	public void setPoint(int point)
	{
		this.point = point;
	}
	
	public int getSum()
	{
		return sum;
	}
	
	public boolean hasWon(boolean win)
	{
		return this.win = win;
	}
	
	public boolean hasLost(boolean lose)
	{
		return this.lose = lose;
	}
	
	public boolean getWin()
	{
		return win;
	}
	
	public boolean getLose()
	{
		return lose;
	}
	
	public boolean getPlay() 
	{
		return play;
	}


	public void setPlay(boolean play)
	{
		this.play = play;
	}


	public void throwDie()
	{
		die1.roll();
		point += die1.getfaceValue();
	}

}
